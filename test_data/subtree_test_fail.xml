<root>
        <!--  //////////  -->
    <BehaviorTree ID="DoorClosed">
        <Sequence name="door_closed_sequence">
            
            <!--  no arguments  -->
            <SubTree ID="ThisOne"/>
            <SubTree ID="TheOther"/>
            
            <!--  compact syntax  -->
            <SubTree ID="ThisOne"   target="{goal}" result="{out}" />
            <SubTree ID="TheOther"  target="{goal}" result="{out}" />
            
            <!--  veebose syntax  -->
            <SubTree ID="ThisOne">
                <remap internal="target" external="{goal}"/>
                <remap internal="result" external="{out}"/>
            </SubTree>    
            <SubTree ID="TheOther">
                <remap internal="target" external="{goal}"/>
                <remap internal="result" external="{out}"/>
            </SubTree> 
            
        </Sequence>
    </BehaviorTree>
    <!--  //////////  -->
    <TreeNodesModel>
        
        <SubTree ID="ThisOne" remap="target;result" />
            <input_port  name="target"/>
            <output_port name="result"/>
        </SubTree>
        
        <SubTree ID="TheOther"/>   
    </TreeNodesModel>
</root>

